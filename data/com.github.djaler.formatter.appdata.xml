<component type="desktop">
    <id>com.github.djaler.formatter.desktop</id>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0+</project_license>
    <name>Formatter</name>
    <summary>A simple device formatter</summary>
    <description>
        <p>Format your removable devices like usb disk or sd card</p>
    </description>
    <categories>
        <category>System</category>
    </categories>
    <custom>
        <value key="x-appcenter-color-primary">#3E9AD6</value>
        <value key="x-appcenter-color-primary-text">rgb(255,255,255)</value>
        <value key="x-appcenter-suggested-price">1</value>
    </custom>
    <developer_name>Kirill Romanov</developer_name>
    <url type="homepage">https://github.com/djaler/formatter</url>
    <url type="bugtracker">https://github.com/djaler/formatter/issues</url>
    <url type="help">https://github.com/djaler/formatter/issues</url>
    <update_contact>djaler1@gmail.com</update_contact>
    <screenshots>
        <screenshot type="default">
            <image>https://raw.githubusercontent.com/djaler/formatter/master/Screenshot.png</image>
        </screenshot>
    </screenshots>
    <releases>
      <release version="0.2.0" date="2018-07-18">
        <description>
          <ul>
            <li>Check for exit codes</li>
            <li>Set device label</li>
            <li>HFS+ support</li>
            <li>FAT16 support</li>
          </ul>
        </description>
      </release>
      <release version="0.1.5" date="2017-11-22">
        <description>
          <ul>
            <li>Icon path fixed</li>
          </ul>
        </description>
      </release>
      <release version="0.1.4" date="2017-11-22">
        <description>
          <ul>
            <li>Added Lithuanian translate</li>
            <li>Added Russian translate</li>
          </ul>
        </description>
      </release>
      <release version="0.1.3" date="2017-08-15">
        <description>
          <ul>
            <li>Typo fix</li>
          </ul>
        </description>
      </release>
      <release version="0.1.2" date="2017-08-15">
        <description>
          <ul>
            <li>USB 3.0 Support</li>
          </ul>
        </description>
      </release>
      <release version="0.1.1" date="2017-08-11">
        <description>
          <ul>
            <li>Format to exFAT</li>
          </ul>
        </description>
      </release>
      <release version="0.1.0" date="2017-08-06">
        <description>
          <p>Initial Release</p>
          <ul>
            <li>Format devices to ext4, FAT32 or NTFS</li>
          </ul>
        </description>
      </release>
    </releases>
</component>
